@model ResumeMVC.ViewModels.EducationVM

<style type="text/css">
    .row {
        margin-bottom: 25px;
    }

    .IconTitle {
        border: 3px solid #e0e0e0;
        display: inline-block;
        width: 70px;
        height: 70px;
        border-radius: 100%;
        background-color: #5cb85c;
    }
</style>

<div class="container">

    <div class="Education FirstLevel" style="margin: 19% auto;">

        <div style="margin-left:18%;">
            <span class="IconTitle">
                <span class="glyphicon glyphicon-education" aria-hidden="true" style="margin-left:26px; margin-top: 23px; color:#FFF;"></span>
            </span>

            <h4 style="margin-left: 8%; margin-top: -4%;">Education</h4>
        </div>


        <div class="panel panel-default" style="width: 65%; margin-left: 18%; margin-top: 3%;">

            <div class="panel-heading">
                <h3 class="panel-title">Education</h3>
            </div> <!-- END PANEL HEADING -->
            <form>
                <div class="panel-body">

                    <div class="row">

                        <div class="col-xs-6">
                            @Html.EditorFor(model => model.InstituteUniversity, new { htmlAttributes = new { @class = "form-control", @placeholder = "Institute/University" } })
                            @Html.ValidationMessageFor(model => model.InstituteUniversity, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-xs-6">
                            @Html.EditorFor(model => model.TitleOfDiploma, new { htmlAttributes = new { @class = "form-control", @placeholder = "Title Of Diploma" } })
                            @Html.ValidationMessageFor(model => model.TitleOfDiploma, "", new { @class = "text-danger" })
                        </div>

                    </div>

                    <div class="row">

                        <div class="col-xs-12">
                            @Html.EditorFor(model => model.Degree, new { htmlAttributes = new { @class = "form-control", @placeholder = "Degree" } })
                            @Html.ValidationMessageFor(model => model.Degree, "", new { @class = "text-danger" })
                        </div>

                    </div>

                    <div class="row">

                        <div class="col-xs-6">
                            <div class="form-group">
                                <div class="input-group date" id="datetimepicker1">
                                    @Html.EditorFor(model => model.FromYear, new { htmlAttributes = new { @class = "form-control", @placeholder = "From Year" } })
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.FromYear, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-xs-6">
                            <div class="form-group">
                                <div class="input-group date" id="datetimepicker2">
                                    @Html.EditorFor(model => model.ToYear, new { htmlAttributes = new { @class = "form-control", @placeholder = "To Year" } })
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.ToYear, "", new { @class = "text-danger" })
                        </div>

                    </div>

                    <div class="row">

                        <div class="col-xs-6">

                            @Html.DropDownListFor(model => model.Country, Model.ListOfCountry, new { @class = "form-control" })

                        </div>

                        <div class="col-xs-6">

                            @Html.DropDownListFor(model => model.City, new List<SelectListItem>(), new { @class = "form-control" })

                        </div>

                    </div>

                    @Html.HiddenFor(model => model.IDEdu, new { @class = "form-control" })


                    <button type="button" id="AddOrUpdateEducation" class="btn btn-success"> <span class="glyphicon glyphicon-education" aria-hidden="true"></span>  Add Eduction </button>
                    <a href="@Url.Action("WorkExperience", "Resume")" class="btn btn-success" style="position: relative; right: -50%;"> Next Step>> Work Experience </a>

                </div> <!-- END PNEL BODY-->
            </form>
        </div>

    </div>   <!-- END EDUCATION FIRST LEVEL-->

</div> <!-- END CONTAINER -->











