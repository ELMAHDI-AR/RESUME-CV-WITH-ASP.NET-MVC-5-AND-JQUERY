@model ResumeMVC.ViewModels.CertificationVM

<div class="Certification FirstLevel" style="margin: -11% auto;">

    <div style="margin-left:18%;">
        <span class="IconTitle" style="background-color:#f0ad4e;">
            <span class="glyphicon glyphicon-file" aria-hidden="true" style="margin-left:26px; margin-top: 23px; color:#FFF;"></span>
        </span>

        <h4 style="margin-left: 8%; margin-top: -4%;">Certifications</h4>
    </div>


    <div class="panel panel-default" style="width: 65%; margin-left: 18%; margin-top: 3%;">

        <div class="panel-heading">
            <h3 class="panel-title">Certifications</h3>
        </div> <!-- END PANEL HEADING -->
        <form>
            <div class="panel-body">

                <div class="row">

                    <div class="col-xs-8">
                        @Html.EditorFor(model => model.CertificationName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Certification Name" } })
                        @Html.ValidationMessageFor(model => model.CertificationName, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-xs-4">
                        @Html.EditorFor(model => model.CertificationAuthority, new { htmlAttributes = new { @class = "form-control", @placeholder = "Certification Authority" } })
                        @Html.ValidationMessageFor(model => model.CertificationAuthority, "", new { @class = "text-danger" })
                    </div>

                </div>

                <div class="row">

                    <div class="col-xs-6">
                        @Html.DropDownListFor(model => model.LevelCertification, Model.ListOfLevel, new { @class = "form-control", @placeholder = "Certification Level" })
                        @Html.ValidationMessageFor(model => model.LevelCertification, "", new { @class = "text-danger" })

                    </div>

                    <div class="col-xs-6">
                        <div class="form-group">
                            <div class="input-group date" id="datetimepicker1">
                                @Html.EditorFor(model => model.FromYear, new { htmlAttributes = new { @class = "form-control", @placeholder = "From Year" } })
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.FromYear, "", new { @class = "text-danger" })
                    </div>

                </div>

                <button type="button" id="AddCertification" class="btn btn-warning"> <span class="glyphicon glyphicon-file" aria-hidden="true"></span>  Add Certification </button>

            </div> <!-- END PANEL BODY-->
        </form>
    </div>

</div>   <!-- END CERTIFICATION FIRST LEVEL-->