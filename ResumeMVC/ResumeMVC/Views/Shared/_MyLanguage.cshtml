@model ResumeMVC.ViewModels.LanguageVM



<div class="Language FirstLevel" style="margin: 17% auto;">

    <div style="margin-left:18%;">
        <span class="IconTitle" style="background-color:#d9534f">
            <span class="glyphicon glyphicon-list" aria-hidden="true" style="margin-left:26px; margin-top: 23px; color:#FFF;"></span>
        </span>

        <h4 style="margin-left: 8%; margin-top: -4%;">Languge</h4>
    </div>


    <div class="panel panel-default" style="width: 65%; margin-left: 18%; margin-top: 3%;">

        <div class="panel-heading">
            <h3 class="panel-title">Languge</h3>
        </div> <!-- END PANEL HEADING -->
        <form>
            <div class="panel-body">

                <div class="row">
                    <div class="col-xs-6">
                        @Html.EditorFor(model => model.LanguageName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Language Name" } })
                        @Html.ValidationMessageFor(model => model.LanguageName, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-xs-6">
                        @Html.DropDownListFor(model => model.Proficiency, Model.ListOfProficiency, new { @class = "form-control", @placeholder = "Proficiency" })
                        @Html.ValidationMessageFor(model => model.Proficiency, "", new { @class = "text-danger" })

                    </div>

                </div>

                <button type="button" id="AddLanguage" class="btn btn-danger"> <span class="glyphicon glyphicon-list" aria-hidden="true"></span>  Add Language </button>

            </div> <!-- END PANEL BODY-->
        </form>
    </div>
    

</div>   <!-- END LANGUAGE FIRST LEVEL-->